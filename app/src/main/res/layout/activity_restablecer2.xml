<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restablecer2">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="309dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:text="Ingresa tu correo electrónico para recibir un enlace y recuperar tu cuenta:"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        tools:layout_editor_absoluteX="51dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="USUARIO FRUGAL FEAST"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        tools:layout_editor_absoluteX="126dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_marginStart="88dp"
        android:text="Enviar"
        app:layout_constraintStart_toEndOf="@+id/button7"
        tools:layout_editor_absoluteY="466dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:text="Cancelar"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword4"
        tools:layout_editor_absoluteX="51dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="178dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:srcCompat="@drawable/usuario"
        tools:layout_editor_absoluteX="116dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Restablecer contraseña"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="131dp" />

    <EditText
        android:id="@+id/editTextTextPassword4"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        tools:layout_editor_absoluteX="44dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Reenviar Codigo"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        tools:layout_editor_absoluteX="129dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="¿No recibiste nada?"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        tools:layout_editor_absoluteX="144dp" />
</androidx.constraintlayout.widget.ConstraintLayout>