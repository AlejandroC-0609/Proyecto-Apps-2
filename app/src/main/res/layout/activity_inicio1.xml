<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/naranja_claro"
    tools:context=".Inicio1">

    <ImageView
        android:id="@+id/imageView"
        style="@style/boton"
        android:layout_width="183dp"
        android:layout_height="150dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/rounded_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburguesa" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="129dp"
        android:layout_height="91dp"
        android:background="@drawable/rounded_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@drawable/tacos"
        tools:layout_editor_absoluteX="207dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="183dp"
        android:layout_height="150dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="262dp"
        android:background="@drawable/rounded_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/paella" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_marginStart="72dp"
        android:text="Encuentra gran variedad de recetas gratis compartidas por cocineros caseros como tu, solo aca en Frugal Feast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.406"
        tools:layout_editor_absoluteX="185dp" />
</androidx.constraintlayout.widget.ConstraintLayout>